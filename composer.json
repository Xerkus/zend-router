{
    "name": "zendframework/zend-router",
    "description": "Flexible routing system for HTTP and console applications",
    "license": "BSD-3-Clause",
    "keywords": [
        "zf",
        "zend",
        "zendframework",
        "routing"
    ],
    "support": {
        "docs": "https://docs.zendframework.com/zend-router/",
        "issues": "https://github.com/zendframework/zend-router/issues",
        "source": "https://github.com/zendframework/zend-router",
        "rss": "https://github.com/zendframework/zend-router/releases.atom",
        "chat": "https://zendframework-slack.herokuapp.com",
        "forum": "https://discourse.zendframework.com/c/questions/components"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/xtreamwayz/zend-coding-standard.git"
        }
    ],
    "require": {
        "php": "^7.1",
        "container-interop/container-interop": "^1.2",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "zendframework/zend-servicemanager": "^3.3",
        "zendframework/zend-stdlib": "^2.7.7 || ^3.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.10.3",
        "phpunit/phpunit": "^7.3",
        "zendframework/zend-coding-standard": "dev-feature/new-rules#ea3de201619e9ac96201f37ad6bd62e6b117fa26",
        "zendframework/zend-diactoros": "^2.0",
        "zendframework/zend-i18n": "^2.7.4"
    },
    "suggest": {
        "zendframework/zend-i18n": "^2.7.4, if defining translatable HTTP path segments"
    },
    "autoload": {
        "psr-4": {
            "Zend\\Router\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZendTest\\Router\\": "test/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.2.x-dev",
            "dev-develop": "3.3.x-dev"
        },
        "zf": {
            "component": "Zend\\Router",
            "config-provider": "Zend\\Router\\ConfigProvider"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "phpstan": "phpstan analyse",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
